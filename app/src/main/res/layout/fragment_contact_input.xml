<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactInputFragment">

    <EditText
        android:id="@+id/etFirstNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:hint="Enter First Name"/>

    <EditText
        android:id="@+id/etLastNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:hint="Enter Last Name"/>

    <EditText
        android:id="@+id/etPhoneNumberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:hint="Enter Phone Number"/>

    <TextView
        android:id="@+id/tvContactDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnSendContactData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Contact Info"/>


</LinearLayout>